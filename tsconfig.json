{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "nodejs-openapi-generator-cli",
  ],
  "exclude": [
    "node_modules",
    "docs",
    "scripts",
    "specs",
    "lib",
    "tests/**/*.ts"
  ]
}